<%= form_with(model: @user, local: true, multipart: true) do |form| %>
  <%= render partial: 'partials/form_errors', locals: {model: @user} %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :avatar %>
    <p><%= image_tag(@user.avatar.thumb.url) if @user.avatar? %></p>
    <%= form.file_field :avatar %>
  </div>
  <div class="actions buffer-top">
    <%= form.submit t('links.save'), class: 'btn btn-primary' %> <%= link_to t('links.return'), :back %>
  </div>
<% end %>
