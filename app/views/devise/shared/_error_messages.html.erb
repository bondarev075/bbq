<% errors = resource.errors %>
<% if errors.any? %>
  <div id="error_explanation" class="alert alert-danger alert-dismissible show" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <p>
      <strong>
        <%= t (:errors, count: errors.count) %>
      </strong>
    </p>
    <ul>
      <% errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
