<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <h2><%= I18n.t 'headers.change_password' %></h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <div class="form-group">
        <%= f.label :password, I18n.t('links.change') %><br />
        <% if @minimum_password_length %>
          <em>(<%= I18n.t 'tips.password.chars_minimum' %>)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, I18n.t('tips.password.confirm_new_password') %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      <div class="actions buffer-top">
        <%= f.submit I18n.t('links.change') %>
      </div>
    <% end %>
    <div class="buffer-top">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
