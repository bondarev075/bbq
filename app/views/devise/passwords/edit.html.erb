<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <h2><%= t('headers.change_password') %></h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <div class="form-group">
        <%= f.label :password, t('tips.password.new_password') %>
        <% if @minimum_password_length %>
          <small>(<%= t('tips.password.chars_minimum', chars_count: @minimum_password_length) %>)</small><br />
        <% end %>
        <%= f.password_field :password, class: 'form-control', autofocus: true, autocomplete: "new-password" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, t('tips.password.confirm_new_password') %><br />
        <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
      </div>
      <div class="actions buffer-top">
        <%= f.submit t('links.change'), class: 'btn btn-primary' %>
      </div>
    <% end %>
    <div class="buffer-top">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
