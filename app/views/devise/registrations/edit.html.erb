<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <h2><%= t('headers.change_password') %></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <small class="text-muted">
            <em><%= t('tips.password.chars_minimum', chars_count: @minimum_password_length) %></em>
            <span>(<%= t('tips.password.leave_empty_to_save_current') %>)</span><br />
          </small>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      <div class="form-group">
        <%= f.label :current_password %>
        <small class="text-muted">
          <i>(<%= t ('tips.password.write_current_to_confirm_changes') %>)</i><br />
        </small>
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>
      <div class="actions">
        <%= f.submit t('links.update'), class: 'btn btn-success' %>
      </div>
    <% end %>
    <h3><%= t ('headers.delete_account') %></h3>
    <p><%= t('tips.account.unhappy') %> <%= button_to t('links.delete_account'),
                        registration_path(resource_name),
                        data: { confirm: t('questions.are_you_sure')},
                        method: :delete, class: 'btn btn-danger' %></p>
    <div class="buffer-top">
      <%= link_to t('links.return'), :back %>
    </div>
  </div>
</div>
